<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.calculadoradeformulas.Screen5Activity"
    android:background="@drawable/bgg">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Você gostou da calculadora de fórmulas?"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textColor="@color/Preto"/>

    <CheckBox
        android:id="@+id/S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="48dp"
        android:text="Sim"
        android:onClick="checkS"
        android:textColor="@color/Preto"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/S"
        android:text="Não"
        android:textColor="@color/Preto"
        android:textSize="21sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/avalS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="Uma avaliação positiva é sempre importante para sabermos que estamos no caminho certo. Obrigado por nos avaliar!"
        android:layout_below="@+id/N"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:textColor="@color/Preto"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/avalN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uma avaliação negativa é sempre bom para nos ajudar a melhorar. Muito obrigado pela avaliação!"
        android:layout_alignBaseline="@+id/avalS"
        android:layout_alignBottom="@+id/avalS"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="@color/Preto"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cred"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"
        android:text="Créditos"
        android:textColor="@color/Gelo"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
